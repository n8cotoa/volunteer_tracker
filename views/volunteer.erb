<h3><%=@volunteer.name%></h3>
<div class="row">
  <div class="col-md-6">
    <h4>Current Project: <%=@project%></h4>
  </div>
  <div class="col-md-6">
    <h4>Assign <%=@volunteer.name%> to new project</h4>
    <form action="/volunteer/<%=@volunteer.id%>" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="new_title">New Project</label>
        <select id='project_id' name='project_id' type='text' class="form-control">
          <% @projects.each() do |project| %>
            <option value="<%= project.id()%>"> <%= project.title %> </option>
          <% end %>
        </select>
      </div>
      <button type="submit" class="btn btn-success">Update</button>
    </form>
    <form action="/volunteer/<%=@volunteer.id%>" method="post">
      <input type="hidden" name="_method" value="delete">
      <div class="form-group">
        <label>Delete Volunteer</label>
      </div>
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>
